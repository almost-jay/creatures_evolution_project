{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",	
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "sourceMap": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"strictFunctionTypes": true,
        "outDir": "./compiled",
        "jsx": "react"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx", 
		"src/index.ts" ],
    "exclude": []
}