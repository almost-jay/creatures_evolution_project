{
    "version": "2.0.0",
	"command": "tsc",
    "isBackground": true,
	"problemMatcher": "$tsc-watch",
	"tasks": [
		{
			"label": "tsc compile",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
		},
		{
			"label": "tsc run",
			"type": "shell",
			"command": "npm start",
			"presentation": {
				"reveal": "always"
			},
		},
	]
}